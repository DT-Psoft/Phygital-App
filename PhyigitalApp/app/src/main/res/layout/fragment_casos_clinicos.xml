<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <EditText
                android:id="@+id/pin_paciente_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:hint="Pin:"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:nextFocusForward="@id/padencia_inp_text" />

            <EditText
                android:id="@+id/padencia_inp_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:hint="Padencia:"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:nextFocusForward="@id/add_caso_button" />

            <Button
                android:id="@+id/add_caso_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD" />


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_casos_clinicos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

