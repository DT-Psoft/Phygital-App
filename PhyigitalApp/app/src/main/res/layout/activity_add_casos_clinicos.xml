<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.AddActivities.AddCasosClinicos"
    android:layout_marginStart="28dp"
    android:layout_marginEnd="28dp"
    android:label="Añadir Caso Clinico"
    >


    <LinearLayout
        android:id="@+id/l"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/titulo_text"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:hint="Pin del paciente"
            android:maxLines="1"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/sesion_numero_text"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:hint="Padencia del paciente"
            android:maxLines="1"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <Button
            android:id="@+id/add_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Añadir Caso Clinico"
            style="@style/buttonDarkStyle"/>

    </LinearLayout>

</LinearLayout>
