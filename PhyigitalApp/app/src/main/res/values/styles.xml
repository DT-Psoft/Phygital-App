<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/myColorPrimary</item>
        <item name="colorPrimaryDark">@color/myColorPrimaryDark</item>
        <item name="colorAccent">@color/myColorAccent</item>
    </style>

    <style name="NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/myColorPrimary</item>
        <item name="colorPrimaryDark">@color/myColorPrimaryDark</item>
        <item name="colorAccent">@color/myColorAccent</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="PopupOverlay" parent="Theme.MaterialComponents.Light" />

    <!-- ESTILOS DE TEXTOS Y COLORES TEXT INPUT LAYOUT -->
    <!--estilo del contador de caracteres de algun InputText -->
    <style name="CounterTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ErrorTextSyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
    </style>


    <!-- ESTILOS CLAROS       -->
    <style name="buttonLightStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="backgroundTint">@color/white</item>
        <item name="rippleColor">@color/colorPrimaryLight</item>
    </style>

    <style name="HintTextStyleLight" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/myColorPrimaryLight</item>
    </style>

    <style name="CustomInputTextLayoutLight" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="counterTextAppearance">@style/CounterTextStyle</item>
        <item name="android:textColorHint">@color/myHintTextColor</item>
        <item name="passwordToggleTint">@color/myColorPrimaryLight</item>
        <item name="hintTextAppearance">@style/HintTextStyleLight</item>
        <item name="helperTextTextAppearance">@style/CounterTextStyle</item>
        <item name="boxStrokeColor">@color/myColorPrimaryLight</item>
        <item name="android:textSize">16sp</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>

        <!--        <item name="android:textColor">#000000</item>-->
    </style>

    <style name="editTextLight" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
    </style>

    <!-- ESTILOS OSCUROS-->
    <style name="buttonDarkStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="rippleColor">@color/colorPrimaryLight</item>
    </style>
    <!--estilo del texto del campo cuando esta por encima o arriba en el input text -->
    <style name="HintTextStyleDark" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/myColorPrimaryDark</item>
    </style>

    <style name="CustomInputTextLayoutDark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="counterTextAppearance">@style/CounterTextStyle</item>
        <item name="android:textColorHint">@color/myHintTextColor</item>
        <item name="passwordToggleTint">@color/myColorPrimaryDark</item>
        <item name="hintTextAppearance">@style/HintTextStyleDark</item>
        <item name="helperTextTextAppearance">@style/CounterTextStyle</item>
        <item name="boxStrokeColor">@color/myColorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>

        <!--        <item name="android:textColor">#000000</item>-->
    </style>

    <style name="editTextDark" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#131313</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>

    </style>

</resources>
